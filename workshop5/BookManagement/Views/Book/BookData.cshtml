@model BookManagement.Models.Books

@{
    ViewBag.Title = "BookData";
}

<h2 style="font-family:Microsoft JhengHei;">圖書明細</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.BookName)
        </dt>

        <dd>
            @Html.Raw(Model.BookName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BookAuthor)
        </dt>

        <dd>
            @Html.Raw(Model.BookAuthor)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BookPublisher)
        </dt>

        <dd>
            @Html.Raw(Model.BookPublisher)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BookNote)
        </dt>

        <dd>
            @Html.Raw(Model.BookNote)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BookBoughtDate)
        </dt>

        <dd>
            @Html.Raw(Model.BookBoughtDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BookClassName)
        </dt>

        <dd>
            @Html.Raw(Model.BookClassName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.Raw(Model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CodeName)
        </dt>

        <dd>
            @Html.Raw(Model.CodeName)
        </dd>

    </dl>
</div>
<div>
    <input type="button" value="修改" class="btn" style="background-color: #99b2db; color:#194284" onclick="location.href='@Url.Action("UpdateBook", "Book",new { BookID = Model.BookID})'" />
    <input type="button" value="查詢借閱紀錄" class="btn" style="background-color: #99b2db; color:#194284" onclick="location.href='@Url.Action("BookLendRecord", "Book" , new { BookID = Model.BookID})'" />
    <input type="button" value="返回" class="btn" style="background-color: #99b2db; color:#194284" onclick="location.href='@Url.Action("Index", "Book")'" />

</div>
